{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "dtoFileNameSuffix": [
            ".command.ts",
            ".query.ts",
            ".view-model.ts",
            ".dto.ts"
          ]
        }
      }
    ]
  }
}
